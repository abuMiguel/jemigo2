{
    "version": 2,
    "builds": [
      {
        "src": "dist/browser/**",
        "use": "@vercel/static"
      },
      {
        "src": "dist/server/server.mjs",
        "use": "@vercel/node",
        "config": {
          "includeFiles": [
            "dist/server/**",
            "dist/browser/**",
            "package.json",
            "package-lock.json",
            "tsconfig.app.json"
          ],
          "nodeVersion": "20.x"
        }
      }
    ],
    "routes": [
      {
        "src": "/(?!api/)(.*)",
        "dest": "dist/server/server.mjs"
      },
      {
        "src": "/api/(.*)",
        "dest": "/api/$1"
      },
      {
        "src": "/assets/(.*)",
        "dest": "/dist/browser/assets/$1"
      }
    ]
  }